@{
    var profilePicPath = User.Claims
                            .FirstOrDefault(c => c.Type == "ProfilePictureUrl" && c.Issuer == "greenactionportal")?.Value;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Barangay Ibabao-Estancia @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link href="~/Images/ibabao estancia logo.png" rel="icon" />
    <style>
        body {
            background-color: #265338;
            color: white;
            font-family: 'Montserrat', sans-serif;
        }

        .header {
            background-color: #265338;
            padding: 1rem;
            display: flex;
            align-items: center;
        }

            .header img {
                width: 80px;
                height: 80px;
                margin-right: 1rem;
            }

        .header-title {
            display: flex;
            flex-direction: column;
        }

            .header-title h1 {
                margin: 0;
                font-size: 1.5rem;
                font-weight: bold;
            }

            .header-title p {
                margin: 0;
                font-size: 0.9rem;
            }

        .navbar {
            background-color: #5c7e6a;
        }

            .navbar .nav-link {
                color: white !important;
            }

            .navbar .btn {
                color: white;
                border: 1px solid white;
            }

        .search-box {
            display: flex;
            align-items: center;
        }

            .search-box input {
                border-radius: 20px;
                border: 1px solid white;
                background-color: #1e472a;
                color: white;
                padding: 0.4rem 1rem;
                outline: none;
            }

                .search-box input::placeholder {
                    color: white;
                }

            .search-box button {
                background: none;
                border: none;
                color: white;
                margin-left: -2rem;
                z-index: 1;
            }

        .login-btn {
            display: flex;
            align-items: center;
            color: white;
            text-decoration: none;
            font-weight: bold;
            font-size: 1rem;
            padding: 0.5rem 1rem;
            border: 1px solid white;
            border-radius: 30px;
            transition: background-color 0.3s, color 0.3s;
        }

            .login-btn:hover {
                background-color: white;
                color: #265338;
            }

        .login-icon {
            font-size: 1.5rem;
            margin-right: 0.5rem;
        }

        hr {
            border: none; /* Remove the default border */
            height: 5px; /* Thickness */
            background-color: white; /* Color */
            margin: 20px 0; /* Optional spacing */
        }

    </style>
</head>
<body>
    <!-- Header Section -->
    <div class="header">
        <img src="~/Images/ibabao estancia logo.png" alt="Logo">
        <div class="header-title">
            <h1>Green Action Portal</h1>
            <p>Barangay Ibabao-Estancia, Mandaue</p>
        </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="user-info ms-auto d-flex align-items-center">
                    <!-- User details -->
                    <div class="user-details me-3 text-end text-white">
                        <div class="user-name">@User.Identity.Name</div>
                        <div class="user-role">@User.FindFirst("Position")</div> <!-- Replace with dynamic role -->
                    </div>

                    <!-- Profile picture with dropdown -->
                    <div class="dropdown">
                        <button class="btn dropdown-toggle user-profile-btn" type="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="@profilePicPath" alt="Profile Picture" class="profile-pic" style="border-radius: 50%;" onerror="this.onerror=null;this.src='/Images/defaultProfile.jpg';" />
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                            <li>
                                <form method="post" action="/Account/Logout">
                                    <button type="submit" class="dropdown-item">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            }
            else
            {
                <a href="~/Account/Login" class="login-btn ms-auto d-flex align-items-center">
                    <div class="login-icon">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <span>Log-in</span>
                </a>
            }
    </div>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="~/Home/Home">Home</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="~/Home/AboutUs" id="aboutDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">About Us</a>
                        <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
                            <li><a class="dropdown-item" href="~/Home/AboutUs">History</a></li>
                            <li><a class="dropdown-item" href="~/Home/AboutUs">Vision & Mission</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="~/Home/CommunityInformation" id="communityDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Community Information</a>
                        <ul class="dropdown-menu" aria-labelledby="communityDropdown">
                            <li><a class="dropdown-item" href="~/Home/CommunityInformation">Barangay Map</a></li>
                            <li><a class="dropdown-item" href="~/Home/CommunityInformation">Population</a></li>
                            <li><a class="dropdown-item" href="~/Home/CommunityInformation">Organizational Chart</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="~/Home/WasteManagement" id="wasteDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Waste Management</a>
                        <ul class="dropdown-menu" aria-labelledby="wasteDropdown">
                            <li><a class="dropdown-item" href="~/Home/WasteManagement">Schedule</a></li>
                            <li><a class="dropdown-item" href="~/Home/WasteManagement">Summary</a></li>
                            <li><a class="dropdown-item" href="~/Home/WasteManagement">Garbage Collection Data</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="~/Home/Activities" id="activitiesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Activities</a>
                        <ul class="dropdown-menu" aria-labelledby="activitiesDropdown">
                            <li><a class="dropdown-item" href="~/Home/Activities">Upcoming Activities</a></li>
                            <li><a class="dropdown-item" href="~/Home/Activities">Recent Activities</a></li>
                        </ul>
                    </li>
                </ul>
                <div class="search-box">
                    <input type="text" placeholder="Search">
                    <button><i class="bi bi-search"></i></button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>


    <br />
    <br />
    <br />
    <hr>
    <footer class="footer text-center mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/Images/ibabao estancia logo.png" alt="Barangay Logo" style="max-width: 175px;">
                    <p class="mt-3">Barangay Ibabao-Estancia<br>Mandaue City, Cebu, Philippines</p>
                    <p><i class="bi bi-geo-alt-fill"></i> 8WPV+2PG, G. Ouano Ext, Estancia, Mandaue City, 6014 Cebu</p>
                </div>
                <div class="col-md-4">
                    <h5>Contact Us</h5>
                    <p>Barangay Ibabao-Estancia Headquarters<br><i class="bi bi-telephone-fill"></i> &nbsp;345-0132<br>Office of the Barangay Captain<br><i class="bi bi-telephone-fill"></i> &nbsp;0917-708-6676<br><i class="bi bi-envelope"></i> &nbsp;ibabao.estancia143@gmail.com</p>
                </div>
                <div class="col-md-4">
                    <h5>Office Hours</h5>
                    <p>8:00 AM - 5:00 PM<br>Monday to Friday</p>
                    <h5>Connect With Us!</h5>
                    <p>
                        <a href="#"><i class="bi bi-facebook"></i></a>
                        <a href="#"><i class="bi bi-instagram"></i></a>
                        <a href="#"><i class="bi bi-twitter"></i></a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
