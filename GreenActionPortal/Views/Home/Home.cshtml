@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="hero text-center text-white"
     style=" background: url('/Images/home-hero.png') no-repeat center center;">
    <div class="d-flex justify-content-center align-items-center h-100">
        <h1>WELCOME TO IBABAO-ESTANCIA<br>GREEN INITIATIVES PORTAL</h1>
    </div>
</div>


<div class="container my-5">
    <!-- Building a Sustainable Future Section -->
    <div class="row align-items-center mb-5">
        <div class="col-md-4">
            <img src="/Images/ibabao barangay hall.jpg" class="img-fluid rounded" alt="Barangay Hall">
        </div>
        <div class="col-md-8 text-white">
            <h1 class="text-uppercase">Building a Sustainable Future Together!</h1>
            <p>Barangay Ibabao-Estancia is committed to creating a sustainable and environmentally responsible community. This platform serves as your one-stop resource for all green initiatives in our barangay, providing essential tools and information to help every resident contribute to a cleaner and greener future.</p>
        </div>
    </div>

    <!-- Garbage Collection Schedule and Waste Collection Overview -->
    <div class="row mb-5">
        <div class="col-md-6">
            <h3 class="text-uppercase bg-secondary text-white p-2">Garbage Collection Schedule</h3>
            <table class="table table-bordered text-center text-white">
                <thead>
                    <tr class="bg-success">
                        <th>Biodegradable</th>
                        <th>Non-Biodegradable</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Monday</td>
                        <td>Tuesday</td>
                    </tr>
                    <tr>
                        <td>Wednesday</td>
                        <td>Thursday</td>
                    </tr>
                    <tr>
                        <td>Friday</td>
                        <td colspan="2">This schedule applies to all sitios in the barangay.</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h3 class="text-uppercase bg-secondary text-white p-2">Waste Collection Overview</h3>
            <img src="/images/waste-collection-chart.jpg" class="img-fluid" alt="Waste Collection Chart">
        </div>
    </div>

    <!-- Upcoming Activities -->
    <div>
        <h3 class="text-uppercase bg-secondary text-white p-2">Upcoming Activities</h3>
        <div class="row text-center text-white">
            <div class="col-md-4">
                <div class="border border-light rounded p-3">
                    <p>Activity 1</p>
                    <a href="#" class="btn btn-light">View</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="border border-light rounded p-3">
                    <p>Activity 2</p>
                    <a href="#" class="btn btn-light">View</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="border border-light rounded p-3">
                    <p>Activity 3</p>
                    <a href="#" class="btn btn-light">View</a>
                </div>
            </div>
        </div>
